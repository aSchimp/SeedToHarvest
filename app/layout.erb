    <script type="text-javascript">
      $(document).ready(function() { 
        $.blockUI.defaults.css = {};
      });
      
      function disable_touch_move(event)
      { 
        event.preventDefault();
      }
      
      function confirmDelete(confirmUrl)
      {
        ActionSheet.addButton("Delete Record", "red", function() {$.mobile.changePage(confirmUrl, {transition: "slide", reverse: true});});
        ActionSheet.addButton("Cancel", "cancel", function() {});
        ActionSheet.open();
      }
    </script>
    
    
